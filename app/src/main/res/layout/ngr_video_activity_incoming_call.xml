<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    >

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="@dimen/space_300"
        android:layout_height="@dimen/space_300"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/space_v_110" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_v_30"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/avatar"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize_32"
        android:text="55555"/>

    <TextView
        android:id="@+id/hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/space_v_40"
        android:layout_below="@id/name"
        android:textColor="@color/white"
        android:text="666666666666"
        android:textSize="@dimen/textsize_28" />

    <TextView
        android:id="@+id/member_list_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/space_v_40"
        android:layout_below="@id/hint"
        android:padding="@dimen/space_5"
        android:text="777"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize_28"
        android:background="@color/color_chinese_medicine"
        android:visibility="gone"/>

    <android.support.v7.widget.RecyclerView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/member_list_hint"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/space_v_50"
        android:fadingEdge="none"
        android:fadingEdgeLength="0dp"
        android:scrollbars="horizontal">

    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/space_100"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/hangup"
            android:layout_width="@dimen/space_120"
            android:layout_height="@dimen/space_120"
            android:layout_marginRight="@dimen/space_100"
            android:src="@drawable/ic_launcher" />


        <ImageView
            android:id="@+id/acceptcall"
            android:layout_width="@dimen/space_120"
            android:layout_height="@dimen/space_120"
            android:src="@drawable/ic_launcher" />
    </LinearLayout>
</RelativeLayout>