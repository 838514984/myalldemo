<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/primary_dark_material_dark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="text">
        <item name="android:textSize">@dimen/textsize_30</item>
    </style>
    <style name="text_weekdays">
        <item name="android:textSize">0sp</item>
    </style>
    <style name="alertDialogStyle">
        <item name="android:fullDark">@drawable/herily_alertex_dlg_bg_full_dark</item>
        <item name="android:topDark">@drawable/herily_alertex_dlg_bg_top_dark</item>
        <item name="android:centerDark">@drawable/herily_alertex_dlg_bg_center_dark</item>
        <item name="android:bottomDark">@drawable/herily_alertex_dlg_bg_bottom_dark</item>
        <item name="android:fullBright">@drawable/herily_alertex_dlg_bg_full_dark</item>
        <item name="android:topBright">@drawable/herily_alertex_dlg_bg_top_dark</item>
        <item name="android:centerBright">@drawable/herily_alertex_dlg_bg_center_dark</item>
        <item name="android:bottomBright">@drawable/herily_alertex_dlg_bg_bottom_dark</item>
        <item name="android:bottomMedium">@drawable/herily_alertex_dlg_bg_bottom_dark</item>
        <item name="android:centerMedium">@drawable/herily_alertex_dlg_bg_center_dark</item>
    </style>

    <style name="FullScreenTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>


</resources>
